@model WViewModel

<h1>hava durumu bilgilerini almak için bir şehir seçin</h1>

<form asp-action="WeatherList" method="post">
    <label for="city">City:</label>
    <input type="text" id="city" name="city" required />
    <button type="submit">Get Weather</button>
</form>

@if (Model != null)
{
    <div>
        <h2>Weather for @Model.name, @Model.country</h2>
        <p>Temperature: @Model.temp_c °C</p>
    </div>
}