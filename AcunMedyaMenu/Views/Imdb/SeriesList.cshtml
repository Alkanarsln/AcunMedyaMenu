@model List<SeriesViewModel.Class1>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container text-center">
    <br /><br />
    <div class="alert alert-success d-inline-block">Tüm Zamanların En iyi Dizisi : ALKAN ARSLAN</div>
</div>
<div class="container">
    <br /><br />
    <table class="table table-bordered">

        <tr>
            <th>#</th>
            <th>Dizi Adı</th>
            <th>Puanı</th>
            <th>Detaylar</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.rank</td>
                <td>@item.title</td>
                <td>@item.rating</td>
                <td><a href="@item.imdb_link" class="btn btn-primary">Sitede Gör</a></td>

            </tr>
        }

    </table>

</div>